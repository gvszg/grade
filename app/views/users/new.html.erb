<div class="row col-md-8">
  <h3>Register</h3>
  <hr>
  <%= form_for @user do |f| %>
    <%= render 'shared/error', obj: @user %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', style: 'width: 50%;' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', style: 'width: 50%;' %>
    </div>
    <%= f.submit 'Sibmit', class: 'btn btn-success' %>
  <% end %>
</div>