<% content_for :posts_index do %>
  <%= link_to 'Bulletin Board', posts_path %>  
<% end %>
<% content_for :edit_post do %>
  <%= link_to 'Edit', edit_post_path(@post) %>  
<% end %>
<% content_for :delete_post do %>
  <%= link_to 'Delet', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>  
<% end %>

<div class="row col-md-8">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', posts_path %></li>
    <li class="active"><%= @post.title %></li>
  </ol>
  <div class="well">
    <h3><%= @post.title %></h3>
    <p>
       <span class="quiet">posted by</span> <%= @post.creator.name %>
      <small>at <%= @post.created_at.to_s(:long) %></small>
    </p>
    <hr>
    <p><%= @post.description %></p>
    <hr>
    <% if logged_in? %>
      <p>      
        <%= link_to check_post_path(@post, check: true), method: :post do %>
          <button class="btn btn-warning btn-sm">checked</button>
        <% end %>      
      </p>
    <% end %>  
  </div>
  <hr>
  <div class="well">
    <h4>Viewed Record</h4>
    <span>Checked by</span>
    <ul>
      <% @post.checks.each do |check| %>
        <li><%= check.creator.name %></li>
      <% end %>
    </ul>
  </div>
</div>
