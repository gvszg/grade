<% content_for :all_class_list do %>
  <%= link_to 'All Classes', years_path %>
<% end %>
<% content_for :new_post do %>
  <%= link_to 'New Post', new_post_path %>
<% end %>

<div class="row col-md-8">
  <h3>Bulletin Board</h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Post created time</th>
        <th>Post creator</th>
        <th width="15%">Viewed Count</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td><%= link_to post.title, post_path(post) %></td>
          <td><%= post.created_at.to_s(:long) %></td>
          <td><%= post.creator.name %></td>
          <td><%= post.check_count %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>