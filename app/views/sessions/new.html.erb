<div class="col-md-6">
  <h3>Log in</h3>
  <hr>
    <%= form_tag '/login' do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", style: 'width: 50%;' %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control", style: 'width: 50%;' %>
      </div>
      <%= submit_tag 'Submit', class: "btn btn-success" %>
    <% end %>
</div>