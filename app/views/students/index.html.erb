<% content_for :all_class_list do %>
  <%= link_to 'All Classes', years_path %>
<% end %>
<% content_for :class_list do %>
  <%= link_to 'New student', new_year_student_path(@year) %>
<% end %>

<div class="col-md-10">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', years_path %></li>
    <li class="active"><%= @year.number %></li>
  </ol>  
  <h3>Class <%= @year.number %> <i class="fa fa-angle-double-right"></i> Students List</h3>
  <hr>
  <table class="table table-bordered table-striped">
    <thead>
      <th width="10%">number</th>
      <th width="40%">name</th>
      <th width="20%">learning state</th>
    </thead>
  <% @year.students.each do |student| %>
    <tbody>
      <td><%= student.number %></td>
      <td><%= student.name %></td>
      <td><%= link_to 'report', year_student_states_path(@year, student) %></td>
    </tbody>
  <% end %>
  </table>
</div>