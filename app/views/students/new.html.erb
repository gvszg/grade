<% content_for :back_class do %>
  <%= link_to 'back_class', year_students_path(@year) %>
<% end %>

<div class="col-md-8 col-md-offset-1">
  <h3>Class <%= @year.number %> <i class="fa fa-angle-double-right"></i> Add Student</h3>
  <hr>
  <%= form_for [@year, @student] do |f| %>
    <div class="form-group">
      <%= f.label :number %>
      <%= f.text_field :number, class: "form-control", style: 'width: 50%;' %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", style: 'width: 50%;' %>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>